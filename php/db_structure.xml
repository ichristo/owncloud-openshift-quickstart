		<name>*dbprefix*groups</name>

		<declaration>

			<field>
				<name>gid</name>
				<type>text</type>
				<default></default>
				<notnull>true</notnull>
				<length>64</length>
			</field>

			<index>
				<name>groups_pKey</name>
				<primary>true</primary>
				<field>
					<name>gid</name>
					<sorting>ascending</sorting>
				</field>
			</index>

		</declaration>

	</table>

