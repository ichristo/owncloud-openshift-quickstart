		<declaration>

			<field>
				<name>id</name>
				<autoincrement>1</autoincrement>
				<type>integer</type>
				<default>0</default>
				<notnull>true</notnull>
				<length>4</length>
			</field>

			<!-- Constant OCP\Share::SHARE_TYPE_* -->
			<field>
				<name>share_type</name>
				<type>integer</type>
				<default>0</default>
				<notnull>true</notnull>
				<length>1</length>
			</field>

			<!-- Foreign Key users::uid or NULL -->
			<field>
				<name>share_with</name>
				<type>text</type>
				<default></default>
				<notnull>false</notnull>
				<length>255</length>
			</field>

			<!-- Foreign Key users::uid -->
			<field>
				<name>uid_owner</name>
				<type>text</type>
				<default></default>
				<notnull>true</notnull>
				<length>64</length>
			</field>

			<!-- Foreign Key share::id or NULL -->
			<field>
				<name>parent</name>
				<type>integer</type>
